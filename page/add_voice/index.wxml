<view class="index">
  <view class="head">
    <view class="title">录入声纹</view>
    <view class="desc">
      <text>\n</text>
    </view>
    <input name="name" placeholder="给你的声音取个名字呗" value='{{name}}' auto-focus bindinput="input" />
  </view>

  <view class="body">
    <view class="widgets">
      <view class="widgets__item">
        <view id="map" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindlongtap="longTap" bindtouchstart="touchStart" bindtouchend="touchEnd">
          <text class="widgets__info-name">{{record_state}}</text>
          <image class="widgets__info-img" src="resources/kind/map.png" background-size="cover" />
        </view>
      </view>

      <view class="widgets__item">
        <view id="form" class="widgets__info {{formShow ? 'widgets__info_show' : ''}}" bindtap="play">
          <text class="widgets__info-name">播放录音</text>
          <image class="widgets__info-img" src="resources/kind/form.png" background-size="cover" />
        </view>
      </view>

      <view class="widgets__item">
        <view id="interact" class="widgets__info {{interactShow ? 'widgets__info_show' : ''}}" bindtap="upload">
          <text class="widgets__info-name">上传录音</text>
          <image class="widgets__info-img" src="resources/kind/interact.png" background-size="cover" />

        </view>
      </view>


    </view>
  </view>
</view>